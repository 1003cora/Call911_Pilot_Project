<UserControl x:Class="Chat.Control.UserControlMessageError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="UserControlError">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Border Background="GreenYellow" CornerRadius="15 15 15 0" Margin="10,12,10,12" Visibility="Visible" Grid.RowSpan="3">
            <TextBlock Text="Error. Cannot connect" Margin="15" TextWrapping="Wrap" Foreground="Black" Width="300" FontSize="16" FontFamily="Cascadia Mono SemiLight"/>
        </Border>
        <TextBlock x:Name="Time" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="10" Margin="0,0,10,0" Foreground="White" Grid.Row="2"/>    
    </Grid>
</UserControl>
